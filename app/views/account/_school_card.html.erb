<div class="col-4">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <% if current_user.school %>
        <h5 class="card-title">Mon College</h5>
        <p class="card-text"><%= current_user.school.name %></p>
      <% else %>
        <h5 class="card-title">Mon College</h5>
        <p class="card-text">Vous n'avez pas encore sélectionné de collège</p>
      <% end %>
      <%= link_to "Modifier", account_edit_path, class: 'btn btn-primary' %>

    </div>
  </div>
</div>
