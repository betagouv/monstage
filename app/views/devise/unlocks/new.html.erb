<h2><%= t('.resend_unlock_instructions') %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "Courriel", required: true %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-lg-6', required: true %>
  </div>

  <div class="actions">
    <%= f.submit t('.resend_unlock_instructions'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
