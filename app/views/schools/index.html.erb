<h2>Gerer les ecoles</h2>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Code UAI</th>
      <th scope="col">Adresse</th>
      <th scope="col">Coordonnées GPS</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr class="<%= school.zipcode.blank? ? 'table-danger' : 'table-success'%>" >
        <th scope="row"><%= school.name %></th>
        <td>
          <a class="external" href="https://www.google.com?q=<%= school.code_uai %>" target="_blank">
            <%= school.code_uai %>
            <i class="fas fa-external-link-alt"></i>
            (nouvelle fenêtre)
          </a>
        </td>
        <td>
          <%= school.street %>
          <%= school.city %>
          <%= school.departement_name %>
          <%= school.zipcode %>
        </td>
        <td>
          [<%= school.coordinates&.lat %>, <%= school.coordinates&.lon %>]
        </td>
        <td>
          <%= link_to edit_school_path(school) do  %>
            <i class="fas fa-pen"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
