<!DOCTYPE html>
<html lang="fr" >
  <head>
    <% if content_for?(:canonical_url) %>
      <link rel='canonical' href='<%= yield(:canonical_url) %>' />
    <% end %>
    <title><%= page_title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <% if turbolink_disabled_to_force_page_refresh? %>
      <meta name="turbolinks-visit-control" content="reload">
    <% end %>
    <%= favicon_link_tag asset_pack_path('media/images/favicon.png') %>
    <%= stylesheet_pack_tag 'application.css', 'data-turbolinks-track': 'reload', media: 'all' %>
    <%= javascript_pack_tag 'application.js', 'data-turbolinks-track': 'reload', defer: true  %>
  </head>

  <body class="<%= env_class_name %> <%= body_class_name %>">
    <a name="top" id="top"></a>
    <div class="content pt-0" data-controller='rg2a'>
      <header role="banner" class="custom-navbar <%= homepage? || statistics? || content_for?(:custom_header) ? '' : 'mb-4' %>">
        <div class="container">
          <div class="row">
            <% if onboarding_flow? %>
              <div class="col px-0"><%= render 'layouts/navbar_auth' %></div>
            <% else %>
              <div class="col px-0"><%= render 'layouts/navbar' %></div>
            <% end %>
          </div>
        </div>
      </header>
      <% if homepage? || statistics? %>
        <%= render 'layouts/flash' %>
        <div role="main"><%= yield %></div>
      <% else %>
        <% if content_for?(:custom_header) %> <%= content_for(:custom_header) %> <% end %>
        <div class="container">
          <%= render 'layouts/flash' %>
          <div role="main"><%= yield %></div>
        </div>
      <% end %>
    </div>
    <footer role="contentinfo" >
      <div class="footer <%= homepage? ? '' : 'mt-3' %> pb-3"  data-controller='footer'>
        <div class="container">
          <%= render 'layouts/footer' %>
        </div>
      </div>
    </footer>
    <% if user_signed_in? &&
         current_user.is_a?(Users::SchoolManagement) &&
         current_user.school.present? &&
         !current_user.school.has_weeks_on_current_year? %>
      <%= render partial: "dashboard/schools/notice_school_manager",
                 locals: { school: current_user.school } %>
    <% end %>
    <% if Rails.env.development? %>
      <script>
        console.log('', "<%= current_user&.to_s || 'logged in as visitor' %>")
      </script>
    <% end %>
    <%= render partial: "layouts/analytics" %>
  </body>
</html>
