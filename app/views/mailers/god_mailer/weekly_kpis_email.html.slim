p style=head_styles
  = "Indicateurs de produit du #{@human_date}"

p style=p_styles
  = "Pour la semaine "
  br
  table
    tr
      td Du lundi
      td style='padding: 0 10px' = @human_last_monday
    tr
      td au dimanche
      td style='padding: 0 10px' = @human_last_sunday
p style=p_styles
  h3
    |Inscriptions
  ul
    - @kpis[:subscriptions].each do |key, kpi|
      li =  "#{key} : #{kpi}"
p style=p_styles
  h3
    |Autres chiffres
  ul
    li = "Nombre total de candidatures : #{@kpis[:applications_count]}"
    li = "Nombre total d'élèves pour ces candidatures : #{@kpis[:student_applyers_count]}"
    li = "Nombre total d'offres valides sur la plateforme : #{@kpis[:offers_count]}"
    ul style='padding-left: 10px; margin-left: 10px'
      li style='font-style: italic'= "Dont offres du secteur public : #{@kpis[:public_offers_count]}"
      li style='font-style: italic' = "Dont offres du secteur privé : #{@kpis[:offers_count] - @kpis[:public_offers_count]}"
    li = "Nombre total de places pour ces offres : #{@kpis[:seats_count]}"
    ul style='padding-left: 10px; margin-left: 10px'
      li style='font-style: italic'= "Dont places du secteur public : #{@kpis[:public_seats_count]}"
      li style='font-style: italic'= "Dont places du secteur privé : #{@kpis[:seats_count] - @kpis[:public_seats_count]}"
