- content_for(:canonical_url, params[:page] ? internship_offers_url(page: params[:page]) : internship_offers_url)

- content_for(:custom_header) do
  h1.text-white.text-center.pt-5.pb-5.pb-md-4.my-0.bg-custom-blue
    = "Postulez Ã  des offres de stage"
  .position-sticky.sticky-top.bg-custom-blue.wrapper-sticky-with-offset
    .container.d-none.d-md-block
      .row
        .col-12
          .pt-3
            = render partial: "internship_offers/search/form", locals: { render_as_partial: true, url: internship_offers_path, default_values: params, form_id: :desktop_internship_offers_index_search_form }

