p
  = "Stage destiné à la filière #{tr_school_track(internship_offer)}"
  br
  - if internship_offer.is_individual?
    span.badge-internship-offer-alone= " Stage individuel (un seul élève par stage)"
  - else
    span.badge-internship-offer-by-group= " Stage collectif (par groupe de #{internship_offer.max_candidates} élèves)"

  - if internship_offer.reserved_to_school?
      span.badge-school-reserved= " Stage reservé (aux élèves du collège #{internship_offer.school.name})"
