- unless current_user.is_a?(Users::Student)
  .row.align-items-center.no-gutters
    .col-12
        = react_component("FilterInternshipOffer")
.row.align-items-center.no-gutters.pt-4
  .col-12.col-md-4.order-3.order-md-1.mb-3.mb-sm-3.text-center.text-sm-left
    p.h2.mb-0#internship-offers-count
      strong= "#{internship_offers.total_count}"
      = " #{'offre'.pluralize(internship_offers.total_count)} de stage"



  ul.col-12.d-none.d-md-flex.order-3.col-md-4.mb-0.mb-sm-3.justify-content-end
    = paginate(@internship_offers, views_prefix: 'internship_offers', window: 2)
