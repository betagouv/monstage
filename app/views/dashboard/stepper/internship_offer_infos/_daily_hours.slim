div
  .custom-control.custom-checkbox.mb-1
    = check_box_tag 'same_daily_planning', true, internship_offer.daily_hours.empty?, class: 'custom-control-input', data: {action: "change->internship-offer-infos#handleToggleWeeklyPlanning"}
    = label_tag 'same_daily_planning', 'Les horaires sont les mêmes toute la semaine', class: 'custom-control-label'

  #weekly-planning[class="mt-3 #{'d-none' if internship_offer.daily_hours.present?}"]
    .row
      .col-5
        = select_tag :weekly_start, options_for_select((6..22).map{|h| "#{h}:00"}, selected: select_weekly_start(internship_offer)), { :include_blank => '--',class: "form-control" }
      .col-1 style="display: flex;align-items: center;justify-content: center;"
        | à
      .col-5
        = select_tag :weekly_end, options_for_select((6..22).map{|h| "#{h}:00"}, selected: select_weekly_end(internship_offer)), { :include_blank => '--',class: "form-control" }

  #daily-planning[class="mt-3 #{'d-none' unless internship_offer.daily_hours.present?}"]
    - %w(lundi mardi mercredi jeudi vendredi samedi).each_with_index do |weekday, i|
      .row.mt-3
        .col-12
          .label= weekday.capitalize
      .row
        .col-5
          = select_tag "daily_start_#{i}", options_for_select((6..22).map{|h| "#{h}:00"}, selected: select_daily_start(internship_offer, i)), {:include_blank => '--', class: "form-control" }
        .col-1 style="display: flex;align-items: center;justify-content: center;"
          | à
        .col-5
          = select_tag "daily_end_#{i}", options_for_select((6..22).map{|h| "#{h}:00"}, selected: select_daily_end(internship_offer, i)), {:include_blank => '--', class: "form-control" }

