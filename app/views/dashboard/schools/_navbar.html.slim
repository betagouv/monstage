- badge_counter = SchoolTabFinders.new(school: @school)
.row.mb-2
  .d-flex style="align-items: baseline"
    h1.h3= @school.name
    a.ml-2.text-danger href="#{account_path(section: 'school')}" Modifier

  -if defined?(render_ux_guidelines)
    = render partial: 'dashboard/schools/ux_classrooms_and_weeks_guidelines', locals: {school: @school }

.row
  ul.nav.nav-tabs.test-dashboard-nav.mb-2
    li.nav-item
      = link_to dashboard_school_class_rooms_path(school), class: "nav-link px-2 px-sm-3 #{current_page?(dashboard_school_class_rooms_path(school)) || defined?(@class_room) && current_page?(dashboard_school_class_room_path(school, @class_room)) ? 'active' : ''}" do
        | Classes &nbsp;
        - if badge_counter.student_without_class_room_count.size.positive?
          span.badge-pill.badge-danger.small= badge_counter.student_without_class_room_count

    - if can? :manage_school_users, @school
      li.nav-item
        = link_to "Personnels", dashboard_school_users_path(school), class: "nav-link px-2 px-sm-3 #{current_page?(dashboard_school_users_path(school)) ? 'active' : ''}"

    - if can? :edit, @school
      li.nav-item
        = link_to "Semaines", edit_dashboard_school_path(school), class: "nav-link px-2 px-sm-3 #{current_page?(edit_dashboard_school_path(school)) ? 'active' : ''}"

    - if ENV['CONVENTION_ENABLED'] && can?(:manage_school_students, @school)
      li.nav-item
        = link_to dashboard_school_internship_applications_path(school), class: "nav-link px-2 px-sm-3 #{current_page?(dashboard_school_internship_applications_path(school)) ? 'active' : ''}" do
          ' Conventions Ã  signer &nbsp;
          - if badge_counter.application_count.positive?
            span.badge-pill.badge-danger.small= badge_counter.application_count
