tr class="test-internship-offer test-internship-offer-#{employer_internship_offer.id} hoverable-row-with-btn"
  td data-head="#{cols[:title].gsub('&nbsp;', ' ').gsub('<br />', ' ')}"
    = link_to internship_offer_path(employer_internship_offer),
              data: { "test-id": "#{employer_internship_offer.id}" },
              class: '' do
      p.internship-item-title.mb-0= employer_internship_offer.title
    p.text-muted.internship-item-city.small.mb-0= employer_internship_offer.city

  td.align-middle.d-none.d-md-table-cell data-head=cols[:view_count]
    span.badge.badge-view-count= employer_internship_offer.view_count

  td.align-middle data-head="#{cols[:rejected_applications_count].gsub('&nbsp;', ' ').gsub('<br />', ' ')}"
    span.badge= employer_internship_offer.rejected_applications_count

  td.align-middle data-head="#{cols[:approved_applications_count].gsub('&nbsp;', ' ').gsub('<br />', ' ')}"
    .row.justify-content-between.px-3
      span.px-3.badge= employer_internship_offer.approved_applications_count


  td.align-middle data-head="#{cols[:submitted_applications_count].gsub('&nbsp;', ' ').gsub('<br />', ' ')}"
    span class="fa-fw #{employer_internship_offer.submitted_applications_count.positive? ? 'red-notification-badge' : 'badge'}"
      = employer_internship_offer.submitted_applications_count
    - if employer_internship_offer.submitted_applications_count.positive?
      = link_to dashboard_internship_offer_internship_applications_path(employer_internship_offer), class: 'btn-hoverable small' do
