div.modal id="sign-internship-application-#{application.id}" tabindex="-1" role="dialog"
  .modal-dialog role="document"

    .modal-content
      .modal-header
        h5.modal-title= application.internship_offer.title
        button type="button" class="close" data-dismiss="modal" aria-label="Close"
          span aria-hidden="true" &times;
      .modal-body
        p
         = render "internship_offers/show_details", internship_offer: application.internship_offer
        