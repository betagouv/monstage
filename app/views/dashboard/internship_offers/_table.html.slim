           rejected_applications_count: "Candidatures refusées",
           approved_applications_count: "Candidatures acceptées",
           submitted_applications_count: "Réponses à donner",
           total_applications_count: "Candidatures",
         }
.fr-table
  table.employer.mb-0
    thead= render partial: "dashboard/internship_offers/table_header",
