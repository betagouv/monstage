{
  "name": "Monstage",
  "description": "Describe infrastructure.",
  "website": "https://www.monstagedetroisieme.fr/",

  "repository": "https://github.com/betagouv/monstage",

  "stack": "heroku-20",
  "buildpacks": [{
      "url": "heroku/nodejs"
    }, {
      "url": "heroku/ruby"
      }],

  "environments": {

    "review": {
      "formation": {
        "web": {
          "quantity": 1,
          "size": "hobby"
        },
        "worker": {
          "quantity": 1,
          "size": "hobby"
        }
      },
      "scripts": {
        "postdeploy": "chmod +x infra/review/post_deploy.sh && sh ./infra/review/post_deploy.sh"
      },
      "env": {
        "RAILS_ENV": "review",
        "RAKE_ENV": "review",
        "RAILS_MAX_THREADS": 6,
        "WEB_CONCURRENCY": 1,
        "CONVENTION_ENABLED": true,
        "YARN_PRODUCTION": false
      },
      "addons": [
        {
          "plan": "heroku-postgresql:hobby-basic",
          "options": {
            "version": "12"
          }
        },
        {
          "plan": "papertrail:choklad"
        }, {
          "plan": "scheduler:standard"
        }, {
          "plan": "mailtrap:unpaid"
        }
      ]
    }
  }
}